{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["plugin:prettier/recommended"],
  "plugins": ["prettier", "import"],
  "rules": {
    "no-console": "error",
    "no-debugger": "error",
    "singleQuote": true,
    "semi": 0
  },
  "settings": {
    "import/resolver": {
      "alias": [["~", "./src"], ["@", "./lib"]]
    }
  }
}
